<p id="notice"><%= notice %></p>


<div class="new-fight-s"></div>

<div class="choose-container">
  <h1 class="h1-page">Fighters!</h1>
  

    <% @characters.each_slice(3) do |block_characters| %>
      <div class="players-row row">
        <% block_characters.each do |character| %>
          <div class="col-md-4">
            <div class="player-block"><%= image_tag character.avatar, class: "img-choose" %>
              <div class="player-info-choose">
                <div class="info-choose">Name:</div>
                <div class="info-choose"><%=character.name%></div>
              </div>
              <div class="player-info-choose">
                <div class="info-choose">Life:</div>
                <div class="info-choose"><%=character.life_points%></div>
              </div>
              <div class="player-info-choose">
                <div class="info-choose">Attack</div>
                <div class="info-choose"><%=character.attack_points%></div>
              </div>
              <div class="mt-2">
                <%= link_to 'Show', character, class: "btn btn-outline-danger " %>
                <%= link_to 'Edit', edit_character_path(character), class: "btn btn-outline-danger " %>
                <%= link_to 'Destroy', character, class: "btn btn-outline-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
              </div>
            </div>
          </div>
        <%end %>
      </div>
    <% end %>
    
    <div class="sub-title actions">
      <%= link_to 'Create one!', new_character_path, class: 'button w-button' %>
    </div>
</div>

</div>
<script src="https://code.jquery.com/jquery-3.3.1.min.js" type="text/javascript" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>
<script src="js/webflow.js" type="text/javascript"></script>





<h1>Characters</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Life points</th>
      <th>Attack points</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @characters.each do |character| %>
      <tr>
        <td><%= character.name %></td>
        <td><%= character.life_points %></td>
        <td><%= character.attack_points %></td>
        <td><%= link_to 'Show', character %></td>
        <td><%= link_to 'Edit', edit_character_path(character) %></td>
        <td><%= link_to 'Destroy', character, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Character', new_character_path %>
